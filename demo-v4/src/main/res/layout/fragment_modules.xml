<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:context=".ui.fragment.ModulesFragment">

    <TextView
        android:id="@+id/tv_conversation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ShowAIHelp"
        android:layout_marginTop="30dp"
        android:textColor="#333333"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_conversation_title"
        android:layout_alignStart="@id/tv_conversation_title"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_show_with_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="ShowWithEntranceId"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_show_with_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="ShowWithApiConfig"
            android:textAllCaps="false" />

    </LinearLayout>

</RelativeLayout>